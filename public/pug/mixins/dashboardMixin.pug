mixin statusInfo(title , color ,  number , period , chart)
    .col 
        .status-info-box
            span(class=color) #{title}
            h4!= number
            if period
                h5 #{period}
            if chart
                .status-info-box-icon(class=chart.icon)
                    svg 
                        use(href='../../assets/images/icons/icons.svg#' + chart.icon)
                    span!= chart.number

mixin customProgress(progress)
    .custom-progress-parent(class='step-' + progress.step) 
        .custom-progress-bar
            .custom-progress-child 
        .custom-progress-text 
            h5 #{progress.textOne} 
            h5!= progress.textTwo 
            h5 #{progress.textThree} 

