mixin pageHead(title , link , dropdown)
    .dash-page-head
        h2!= title
        if link
            a.main-link(href=link.url class="btn hvr-float-shadow") #{link.title}
        if dropdown 
            - var number = Math.floor(Math.random() * 1000); 

            .dropdown
                button.btn.dropdown-toggle.main-link(id="dropdown-" +  number  type='button' data-bs-toggle='dropdown' aria-expanded='false') #{dropdown.label}
                ul.dropdown-menu(aria-labelledby="dropdown-" +  number)
                    each option in dropdown.items   
                        li
                            a.dropdown-item(href=option.url) #{option.title}


