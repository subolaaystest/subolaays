mixin CompanyBox(company)
    - var number = Math.floor(Math.random() * 1000); 

    .company-box 
        .company-box-top 
            .company-box-name
                span #{company.title}
                h2 #{company.name}
            if company.settings
                .company-box-settings 
                    a(href="")
                        svg 
                            use(href='../../assets/images/icons/icons.svg#settings')
        .company-box-logo 
            img(src="../../assets/images/logos/" + company.logo + '.png' alt="")
        if company.check

            .company-box-check 
                .form-group.m-0
                    label(for="switch" + + number)    مفعلة
                .form-check.form-switch.form-switch-md.m-0
                    input.form-check-input(type='checkbox' id="switch" + number role='switch')
                    label.form-check-label(for="switch" + number)
        if company.btn
            .company-box-btn
                a.btn.btnn.btnn-orange.btn-fill(href="") 
                    span ربط الخدمة
